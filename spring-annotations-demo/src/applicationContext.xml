<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
    xmlns:context="http://www.springframework.org/schema/context"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans.xsd
    http://www.springframework.org/schema/context
    http://www.springframework.org/schema/context/spring-context.xsd">
    
    <!-- Adding config files to the application context -->
    <context:property-placeholder 
    	location="classpath:project.properties"/>
    
    <!-- Enable Component Scanning (for spring annotations) -->
    <context:component-scan base-package="com.gabb.springannotations"/>
    <context:component-scan base-package="testrunner.manager"/>
    
</beans>





